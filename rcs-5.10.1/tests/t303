##
# Check that rlog aborts w/ correct line number diagnostic.
##

. $srcdir/common
split_std_out_err

rerr=$wd/rerr

must 'sed "58s/^/X/" `bundled_commav stdio-sync` > $v'
rlog $v 2>$rerr \
    && problem 'rlog did not abort'

test -s $rerr \
    || problem 'no diagnostic output'

grep ':58: unexpected .*0x58' \
     $rerr 1>/dev/null \
    || problem 'incorrect diagnostic'

exit 0

# t303 ends here
